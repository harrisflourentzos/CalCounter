<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#584691"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.calcounterapplication.com.calcounter.DisplayFoods">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:gravity="left|center"
        android:background="#49229e"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/displayFoodsTotalCalId"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fdfdfc"
            android:text="@string/display_foods_totalCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/displayFoodsCalResultId"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textColor="#fdfdfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/displayFoodsFoodItemsId"
            android:text="@string/display_foods_foodItems"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ListView
        android:id="@+id/displayFoodsListViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
    </ListView>

</android.support.constraint.ConstraintLayout>
