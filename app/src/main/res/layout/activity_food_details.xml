<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#584691"
    tools:context="app.calcounterapplication.com.calcounter.FoodDetails">

    <ImageView
        android:id="@+id/imageViewId"
        android:background="@drawable/fruit"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="51dp" />

    <LinearLayout
        android:background="@drawable/background"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewId"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/foodDetailsFoodNameId"
            android:text="Food Name"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/foodDetailsCaloriesId"
            android:text="@string/food_details_calories"
            android:padding="20dp"
            android:textStyle="bold|italic"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/foodDetailsCaloriesResultId"
            android:text="120"
            android:textSize="25sp"
            android:textColor="#7e44e3"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/foodDetailsDateId"
            android:paddingTop="30dp"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/foodDetailsButtonShareId"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:text="@string/food_details_button_share"
        android:textColor="#ffffff"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintVertical_bias="0.894" />

</android.support.constraint.ConstraintLayout>
